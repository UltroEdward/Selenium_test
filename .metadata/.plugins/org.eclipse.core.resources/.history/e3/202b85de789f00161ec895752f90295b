package com.manahealth.sv.ui.tests.framework.utils;

import java.io.IOException;
import java.io.InputStream;
import java.util.Properties;

public class Config {

	public static final String FILE_NAME = "config.properties";
	public static Properties property = new Properties();

	public static String getValue(String key) {
		return getPropertyFile().getProperty(key).trim();
	}

	private static Properties getPropertyFile() {
		if (property == null) {
			InputStream input = Config.class.getClassLoader().getResourceAsStream(FILE_NAME);
			try {
				property.load(input);
			} catch (IOException e) {
				e.printStackTrace();
			}
		}
		return property;
	}

}
